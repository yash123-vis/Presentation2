<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2"
    android:scrollbars="none"
    tools:context=".SelectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hdp_white_logo" />

        <LinearLayout
            android:id="@+id/language_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/language_click"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/productsans_regular"
                android:text="@string/change_language"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/language" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/calculator_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/language_ll"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_ripple"
            android:padding="20dp">

            <TextView
                android:id="@+id/cal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/productsans_bold"
                android:letterSpacing="0.04"
                android:text="@string/health_calculator"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/calculate" />

        </RelativeLayout>

        <GridLayout
            android:id="@+id/breast_brain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/calculator_linear"
            android:layout_marginBottom="10dp"
            android:columnCount="2"
            android:rowCount="2">

            <RelativeLayout
                android:id="@+id/brain_rel"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginStart="20dp"
                android:background="@drawable/red_background">

                <View
                    android:id="@+id/view1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectengle" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_above="@id/view1"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/view1"
                    android:background="@drawable/circle" />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="-30dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/brain_tumor_front_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/productsans_bold"
                    android:letterSpacing="0.02"
                    android:text="@string/brain_tumor_detection"
                    android:textColor="@color/white"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/breast_rel"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/red_background">

                <View
                    android:id="@+id/view4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectengle" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_above="@id/view4"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/view4"
                    android:background="@drawable/circle" />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="-30dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/brain_tumor_front_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/productsans_bold"
                    android:letterSpacing="0.02"
                    android:text="@string/brain_tumor_detection"
                    android:textColor="@color/white"
                    android:textSize="22sp" />
            </RelativeLayout>

        </GridLayout>


        <RelativeLayout
            android:id="@+id/heart_rel"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/breast_brain"
            android:background="@drawable/red_background">

            <View
                android:id="@+id/view4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectengle" />

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_above="@id/view4"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/view4"
                android:background="@drawable/circle" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="-30dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/brain_tumor_front_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/productsans_bold"
                android:letterSpacing="0.02"
                android:text="@string/brain_tumor_detection"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </RelativeLayout>


        <GridLayout
            android:id="@+id/skin_and_covid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/heart_rel"
            android:layout_marginBottom="20dp"
            android:columnCount="2"
            android:rowCount="2">


            <RelativeLayout
                android:id="@+id/covid_rel"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/yellow_background">

                <TextView
                    android:id="@+id/covid_cancer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/productsans_bold"
                    android:text="@string/covid_disease_ndetection"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/yellow_circle" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/covid_font_image" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/next_rel"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/dotted_background"
                android:gravity="center">

                <ImageView
                    android:id="@+id/upcoming_model_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/next_icon" />


                <TextView
                    android:id="@+id/next_cancer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/upcoming_model_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/productsans_regular"
                    android:text="@string/upcoming_model"
                    android:textColor="@color/green2"
                    android:textSize="16sp" />

            </RelativeLayout>

        </GridLayout>

        <RelativeLayout
            android:id="@+id/medi_consult_rel"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/skin_and_covid"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_back">

            <View
                android:id="@+id/view12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/gray_rectangle" />

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_above="@id/view12"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/view12"
                android:background="@drawable/gray_circle2" />

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/medi_consult_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/productsans_bold"
                android:letterSpacing="0.02"
                android:text="@string/medi_consult"
                android:textColor="@color/black2"
                android:textSize="24sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/logout_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/medi_consult_rel"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/logout_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/productsans_bold"
                android:letterSpacing="0.02"
                android:text="@string/logout"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/logout_icon" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/profile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/language_ll"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="1306dp"
            android:gravity="bottom"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_ripple"
            android:padding="20dp">

            <TextView
                android:id="@+id/profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/productsans_bold"
                android:letterSpacing="0.04"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/calculate" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>