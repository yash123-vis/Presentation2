<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black3"
    tools:context=".calculator.BP.Bloodpressure_Chart">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tv_bodyfat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/Systolic_Blood_Pressure"
                android:textColor="@color/white"
                android:fontFamily="@font/productsans_bold"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_back"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_fat_level"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="@string/Blood_Pressure_Category"
                        android:fontFamily="@font/productsans_bold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_men_fatlevel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:fontFamily="@font/productsans_bold"
                        android:text="@string/Systolic_mmHg"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_vlow_fat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:text="@string/Normal"
                        android:fontFamily="@font/productsans_regular"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_vlow_fat_man"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:text="&lt;120"
                        android:fontFamily="@font/productsans_bold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_low_fat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:fontFamily="@font/productsans_regular"
                        android:text="@string/Prehypertension"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_low_fat_man"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:text="120-139"
                        android:fontFamily="@font/productsans_bold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_avg_fat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:fontFamily="@font/productsans_regular"
                        android:text="@string/Hypertension_Stage1"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_avg_fat_man"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:text="140-159"
                        android:fontFamily="@font/productsans_bold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_high_fat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:fontFamily="@font/productsans_regular"
                        android:text="@string/Hypertension_Stage2"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_high_fat_man"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:text="160-180"
                        android:fontFamily="@font/productsans_bold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_vhigh_fat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:fontFamily="@font/productsans_regular"
                        android:text="@string/Hypertensive_Crisis"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_vhigh_fat_man"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:fontFamily="@font/productsans_bold"
                        android:text="&gt;180"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_bodayfat_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/Diastolic_Blood_Pressure"
                android:textColor="@color/white"
                android:fontFamily="@font/productsans_bold"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:padding="5dp"
                android:background="@drawable/button_back"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_bodayfat_classification"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:fontFamily="@font/productsans_bold"
                        android:text="@string/Blood_Pressure_Category"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_bodayfat_classification_man"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:fontFamily="@font/productsans_bold"
                        android:text="@string/Diastolic_mmHg"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_essential_fat"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:text="@string/Normal"
                        android:fontFamily="@font/productsans_regular"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_essential_fat_man"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:text="&lt;80"
                        android:fontFamily="@font/productsans_bold"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_athletes"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:fontFamily="@font/productsans_regular"
                        android:text="@string/Prehypertension"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_athletes_man"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:text="80-89"
                        android:fontFamily="@font/productsans_bold"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_fitness"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:fontFamily="@font/productsans_regular"
                        android:text="@string/Hypertension_Stage1"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_fitness_man"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:text="90-99"
                        android:fontFamily="@font/productsans_bold"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_acceptable"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:fontFamily="@font/productsans_regular"
                        android:text="@string/Hypertension_Stage2"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_acceptable_man"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:fontFamily="@font/productsans_bold"
                        android:text="100-110"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_acceptable1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:fontFamily="@font/productsans_regular"
                        android:text="@string/Hypertensive_Crisis"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_acceptable_man1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="fill"
                        android:padding="5dp"
                        android:text="&gt;110"
                        android:fontFamily="@font/productsans_bold"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>