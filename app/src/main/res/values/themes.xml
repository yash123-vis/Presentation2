<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BrainTumorPrediction" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black2</item>
        <item name="colorPrimaryVariant">@color/black2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.AppWithNoTitleBar" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TreatmentTheme" parent="Theme.BrainTumorPrediction">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="CovidTheme" parent="Theme.BrainTumorPrediction">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="SkinTheme" parent="Theme.BrainTumorPrediction">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="PreventionTheme" parent="Theme.BrainTumorPrediction">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="CovidPreventionTheme" parent="Theme.BrainTumorPrediction">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="BlueTheme" parent="Theme.BrainTumorPrediction">
        <item name="colorPrimary">#70C0FF</item>
        <item name="colorPrimaryVariant">#70C0FF</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="android:fontFamily">@font/productsans_regular</item>
        <!--        Radio button unchecked-->
        <item name="android:colorControlNormal">@color/white</item>
        <!--        Radio button checked-->
        <item name="android:colorControlActivated">@color/black2</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="NavDrawerFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/productsans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>


    <style name="spinnerstyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/productsans_regular</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:fontFamily">@font/productsans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>
</resources>